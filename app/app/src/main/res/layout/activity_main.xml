<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/textviewdavid"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="right"
        android:textSize="30sp"
        android:text=""/>
    <EditText
        android:id="@+id/editviewdavid"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="right"
        android:textSize="30sp"
        android:hint=""
        android:textCursorDrawable="@null"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#000000"/>


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="1"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:text="2"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:text="3"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonjia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="+"
            android:background="@drawable/bt_shape" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button4"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button5"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button6"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonjian"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@drawable/bt_shape" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button7"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button8"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="25sp"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttoncheng"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:background="@drawable/bt_shape" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttondian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="."
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:text="0"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttongui"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="E"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonchu"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:background="@drawable/bt_shape"
            />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonping"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="²"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttongeng"
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:text="√"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonqing"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonEqual"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:background="@drawable/bt_shape" />

    </TableRow>

</TableLayout>