<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:layout_height="match_parent"
    android:background="@drawable/zm">
    <TextView
        android:id="@+id/textviewdavid"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="right"
        android:textSize="60sp"
        android:textColor="#000"
        android:text=""
        android:background="@null"/>
    <EditText
        android:id="@+id/editviewdavid"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="right"
        android:textSize="60sp"
        android:textColor="#000"
        android:background="@null"
        android:textCursorDrawable="@null"
        />



    <TableRow
        android:id="@+id/tableRow1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/buttonqing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="C"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonbian"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="±"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttontui"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="←"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="÷"
            android:background="@drawable/myshape" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button7"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button8"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button9"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttoncheng"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="×"
            android:background="@drawable/myshape" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button4"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button5"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:textColor="#000"
            android:textSize="20sp"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonjian"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="－"
            android:background="@drawable/myshape" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="1"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/button3"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonjia"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="＋"
            android:background="@drawable/myshape"
            />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_span="2"
            android:text="0"
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttondian"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="."
            android:textColor="#000"
            android:background="@drawable/bt_shape" />

        <Button
            android:id="@+id/buttonEqual"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:background="@drawable/myshape" />


    </TableRow>

</TableLayout>